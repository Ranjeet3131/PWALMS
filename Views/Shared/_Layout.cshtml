@using Microsoft.EntityFrameworkCore
@using PWALMS.Data
@using PWALMS.Models
@inject IServiceProvider ServiceProvider

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PWA LMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PWALMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/announcements.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Dashboard">
                    <i class="fas fa-graduation-cap"></i> PWA LMS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var role = Context.Session.GetString("RoleName");
                            var userId = Context.Session.GetString("UserID");
                        }

                        @if (!string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Dashboard">
                                    <i class="fas fa-home"></i> Dashboard
                                </a>
                            </li>

                            @if (role == "Admin" || role == "Uploader")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cogs"></i> Management
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Quiz" asp-action="Create">
                                                <i class="fas fa-plus-circle"></i> Create Quiz
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Quiz" asp-action="Manage">
                                                <i class="fas fa-list"></i> Manage Quizzes
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Quiz" asp-action="Categories">
                                                <i class="fas fa-tags"></i> Quiz Categories
                                            </a>
                                        </li>

                                        @if (role == "Admin")
                                        {
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                                                    <i class="fas fa-user-plus"></i> Add User
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                                                    <i class="fas fa-users"></i> Manage Users
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Quiz" asp-action="DepartmentReport">
                                                    <i class="fas fa-chart-bar"></i> Department Report
                                                </a>
                                            </li>
                                        }

                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Announcement" asp-action="Create">
                                                <i class="fas fa-bullhorn"></i> Create Announcement
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (role == "QuizTaker")
                            {
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Announcement" asp-action="Index">
                                    <i class="fas fa-bullhorn"></i> Announcements
                                </a>
                            </li>

                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" href="#">
                                    <i class="fas fa-user"></i> @Context.Session.GetString("FullName")
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Announcement Ticker -->
    @{
        List<Announcement> announcements = null;

        try
        {
            using (var scope = ServiceProvider.CreateScope())
            {
                var dbContext = scope.ServiceProvider.GetRequiredService<ApplicationDbContext>();
                announcements = dbContext.Announcements?
                .Include(a => a.CreatedBy)
                .Where(a => a.IsActive && (!a.ExpiryDate.HasValue || a.ExpiryDate >= DateTime.Now))
                .OrderByDescending(a => a.CreatedDate)
                .Take(5)
                .ToList();
            }
        }
        catch (Exception ex)
        {
            // Log error or silently fail
            Console.WriteLine($"Error loading announcements: {ex.Message}");
            announcements = new List<Announcement>();
        }
    }

    @if (announcements != null && announcements.Any())
    {
        <div class="announcement-ticker">
            <div class="ticker-container">
                <div class="ticker-label">
                    <i class="fas fa-bullhorn"></i> Announcements
                </div>

                @foreach (var announcement in announcements)
                {
                    <div class="announcement-item announcement-@announcement.Priority?.ToLower()">
                        <span class="announcement-icon">
                            @if (announcement.Priority == "High")
                            {
                                <i class="fas fa-exclamation-circle text-danger"></i>
                            }
                            else if (announcement.Priority == "Normal")
                            {
                                <i class="fas fa-info-circle text-warning"></i>
                            }
                            else
                            {
                                <i class="fas fa-info-circle text-info"></i>
                            }
                        </span>
                        <span class="announcement-title">@announcement.Title:</span>
                        <span class="announcement-content">@announcement.Content</span>
                        <span class="announcement-meta">
                            <i class="fas fa-user"></i> @announcement.CreatedBy?.FullName
                            | <i class="fas fa-calendar"></i> @announcement.CreatedDate.ToString("MMM dd, HH:mm")
                        </span>
                    </div>
                }

                <!-- Duplicate for seamless loop -->
                @foreach (var announcement in announcements)
                {
                    <div class="announcement-item announcement-@announcement.Priority?.ToLower()">
                        <span class="announcement-icon">
                            @if (announcement.Priority == "High")
                            {
                                <i class="fas fa-exclamation-circle text-danger"></i>
                            }
                            else if (announcement.Priority == "Normal")
                            {
                                <i class="fas fa-info-circle text-warning"></i>
                            }
                            else
                            {
                                <i class="fas fa-info-circle text-info"></i>
                            }
                        </span>
                        <span class="announcement-title">@announcement.Title:</span>
                        <span class="announcement-content">@announcement.Content</span>
                        <span class="announcement-meta">
                            <i class="fas fa-user"></i> @announcement.CreatedBy?.FullName
                            | <i class="fas fa-calendar"></i> @announcement.CreatedDate.ToString("MMM dd, HH:mm")
                        </span>
                    </div>
                }
            </div>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3 mt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Patients Welfare Association LMS
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            // Initialize announcement ticker
            initAnnouncementTicker();

            function initAnnouncementTicker() {
                const ticker = $('.ticker-container');
                const tickerWidth = ticker.width();
                const containerWidth = $('.announcement-ticker').width();

                // Calculate animation duration based on content width
                const contentWidth = tickerWidth;
                const duration = (contentWidth / 50) * 1000; // 50px per second

                // Set animation
                ticker.css({
                    'animation': `ticker-scroll ${duration}ms linear infinite`,
                    'animation-play-state': 'running'
                });

                // Pause on hover
                ticker.hover(
                    function() {
                        $(this).css('animation-play-state', 'paused');
                    },
                    function() {
                        $(this).css('animation-play-state', 'running');
                    }
                );

                // Click to view announcement
                $('.announcement-item').click(function() {
                    const title = $(this).find('.announcement-title').text().replace(':', '');
                    alert('Announcement: ' + title + '\nClick "Announcements" in menu to view all.');
                });
            }

            // Handle window resize
            let resizeTimer;
            $(window).resize(function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    initAnnouncementTicker();
                }, 250);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>