@model PWALMS.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-trash"></i> Delete User</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5><i class="fas fa-exclamation-triangle"></i> Warning!</h5>
                    <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5>User Details</h5>
                        <p><strong>Username:</strong> @Model.Username</p>
                        <p><strong>Full Name:</strong> @Model.FullName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Role:</strong> @Model.Role?.RoleName</p>
                        <p><strong>Department:</strong> @Model.Department?.DepartmentName</p>
                        <p>
                            <strong>Status:</strong>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </p>
                        <p><strong>Created:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.UserID" />
                    @Html.AntiForgeryToken()

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Yes, Delete User
                        </button>
                        <a asp-action="Users" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>