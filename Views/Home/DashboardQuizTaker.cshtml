@{
    ViewData["Title"] = "Quiz Taker Dashboard";
    var availableQuizzes = ViewBag.AvailableQuizzes as List<PWALMS.Models.Quiz> ?? new List<PWALMS.Models.Quiz>();
    var userAttempts = ViewBag.UserAttempts as List<PWALMS.Models.QuizAttempt> ?? new List<PWALMS.Models.QuizAttempt>();
}

<div class="container">
    <h2>Welcome, Quiz Taker!</h2>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Available Quizzes</h5>
                </div>
                <div class="card-body">
                    @if (availableQuizzes.Any())
                    {
                        <div class="row">
                            @foreach (var quiz in availableQuizzes)
                            {
                                var userAttempt = userAttempts.FirstOrDefault(a => a.QuizID == quiz.QuizID);

                                <div class="col-md-6 mb-3">
                                    <div class="card quiz-card">
                                        <div class="card-body">
                                            <h5 class="card-title">@quiz.QuizTitle</h5>
                                            <p class="card-text">@(string.IsNullOrEmpty(quiz.Description) ? "No description" : quiz.Description)</p>
                                            <p><small>Department: @quiz.Department?.DepartmentName</small></p>
                                            <p><small>Time Limit: @quiz.TimeLimitMinutes minutes</small></p>
                                            <p><small>Questions: @quiz.TotalQuestions</small></p>

                                            @if (userAttempt != null && userAttempt.Status == "Completed")
                                            {
                                                <div class="alert alert-info p-2 mb-2">
                                                    <small><i class="fas fa-check-circle"></i> Already Completed</small>
                                                </div>
                                                <a href="@Url.Action("Results", "Quiz", new { id = userAttempt.AttemptID })"
                                                   class="btn btn-outline-info btn-sm">
                                                    View Submission
                                                </a>
                                            }
                                            else if (userAttempt != null && userAttempt.Status == "InProgress")
                                            {
                                                <a href="@Url.Action("Take", "Quiz", new { id = quiz.QuizID })"
                                                   class="btn btn-warning">
                                                    Continue Quiz
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Take", "Quiz", new { id = quiz.QuizID })"
                                                   class="btn btn-primary">
                                                    Take Quiz
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No quizzes available for your department at the moment.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>My Quiz History</h5>
                </div>
                <div class="card-body">
                    @if (userAttempts.Any(a => a.Status == "Completed"))
                    {
                        <div class="list-group">
                            @foreach (var attempt in userAttempts.Where(a => a.Status == "Completed").Take(5))
                            {
                                <div class="list-group-item">
                                    <h6>@attempt.Quiz?.QuizTitle</h6>
                                    <p>Submitted: @attempt.EndTime?.ToString("yyyy-MM-dd HH:mm")</p>
                                    <small>Status: <span class="badge bg-success">Completed</span></small>
                                    <div class="mt-2">
                                        <a href="@Url.Action("Results", "Quiz", new { id = attempt.AttemptID })"
                                           class="btn btn-sm btn-outline-primary">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>No completed quizzes yet.</p>
                    }

                    @if (userAttempts.Any(a => a.Status == "InProgress"))
                    {
                        <div class="mt-3">
                            <h6>In Progress</h6>
                            @foreach (var attempt in userAttempts.Where(a => a.Status == "InProgress"))
                            {
                                <div class="alert alert-warning p-2 mb-2">
                                    <small><i class="fas fa-clock"></i> @attempt.Quiz?.QuizTitle</small>
                                    <a href="@Url.Action("Take", "Quiz", new { id = attempt.QuizID })"
                                       class="btn btn-sm btn-warning float-end">
                                        Continue
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>