@model PWALMS.Models.Announcement
@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Announcement</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this announcement?</h5>

            <div class="alert alert-warning mt-3">
                <h5>@Model.Title</h5>
                <p>@Model.Content</p>
                <p class="mb-0">
                    <small>Posted by: @Model.CreatedBy?.FullName on @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</small>
                </p>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="AnnouncementID" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Yes, Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>