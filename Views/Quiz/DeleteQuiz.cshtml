@model PWALMS.Models.Quiz
@{
    ViewData["Title"] = "Delete Quiz";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-trash"></i> Delete Quiz</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5><i class="fas fa-exclamation-triangle"></i> Warning!</h5>
                    <p>Are you sure you want to delete this quiz? This action cannot be undone and will delete:</p>
                    <ul>
                        <li>All questions in this quiz</li>
                        <li>All options for each question</li>
                        <li>All quiz attempts by users</li>
                        <li>All user answers</li>
                    </ul>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5>Quiz Details</h5>
                        <p><strong>Title:</strong> @Model.QuizTitle</p>
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Department:</strong> @Model.Department?.DepartmentName</p>
                        <p><strong>Category:</strong> @Model.Category?.CategoryName</p>
                        <p><strong>Questions:</strong> @Model.TotalQuestions</p>
                        <p><strong>Total Marks:</strong> @Model.TotalMarks</p>
                        <p><strong>Created By:</strong> @Model.CreatedByUser?.FullName</p>
                        <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd")</p>
                        <p>
                            <strong>Status:</strong>
                            @if (Model.IsPublished)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Draft</span>
                            }
                        </p>
                    </div>
                </div>

                <form asp-action="DeleteQuizConfirmed" method="post">
                    <input type="hidden" asp-for="QuizID" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Yes, Delete Quiz
                        </button>
                        <a asp-action="Manage" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>