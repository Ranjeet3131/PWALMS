@model List<PWALMS.Models.QuizCategory>
@{
    ViewData["Title"] = "Quiz Categories";
}

<div class="container">
    <h2>Quiz Categories</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p>Organize your quizzes into categories for better management.</p>
        @if (ViewContext.HttpContext.Session.GetString("RoleName") == "Admin" ||
                ViewContext.HttpContext.Session.GetString("RoleName") == "Uploader")
        {
            <a asp-action="CreateCategory" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Category
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@category.CategoryName</h5>
                        <p class="card-text">@category.Description</p>
                        <p class="text-muted">
                            <i class="fas fa-clipboard-list"></i>
                            Quizzes: @(ViewBag.QuizCounts != null && ViewBag.QuizCounts.ContainsKey(category.CategoryID) ? ViewBag.QuizCounts[category.CategoryID] : 0)
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        @if (ViewContext.HttpContext.Session.GetString("RoleName") == "Admin")
                        {
                            <a asp-action="DeleteCategory" asp-route-id="@category.CategoryID"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete category: @category.CategoryName?')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No categories found. <a asp-action="CreateCategory">Create your first category</a>.
        </div>
    }
</div>