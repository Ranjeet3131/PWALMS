@model PWALMS.ViewModels.QuizCreateModel
@{
    ViewData["Title"] = "Create New Quiz";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Create New Quiz</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="QuizTitle" class="form-label"></label>
                        <input asp-for="QuizTitle" class="form-control">
                        <span asp-validation-for="QuizTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartmentID" class="form-label"></label>
                            <select asp-for="DepartmentID" class="form-select">
                                <option value="">-- Select Department --</option>
                                @foreach (var dept in ViewBag.Departments)
                                {
                                    <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                                }
                            </select>
                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TimeLimitMinutes" class="form-label"></label>
                            <input asp-for="TimeLimitMinutes" type="number" class="form-control" min="1" max="300">
                            <span asp-validation-for="TimeLimitMinutes" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control">
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control">
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Quiz
                        </button>
                        <a asp-action="Manage" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Quiz List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}