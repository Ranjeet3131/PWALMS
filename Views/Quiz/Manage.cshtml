@model List<PWALMS.Models.Quiz>
@{
    ViewData["Title"] = "Manage Quizzes";
}

<div class="container">
    <h2>Manage Quizzes</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Quiz
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Department</th>
                    <th>Created By</th>
                    <th>Questions</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model)
                {
                    <tr>
                        <td>@quiz.QuizID</td>
                        <td>@quiz.QuizTitle</td>
                        <td>@quiz.Department?.DepartmentName</td>
                        <td>@quiz.CreatedByUser?.FullName</td>
                        <td>@quiz.TotalQuestions</td>
                        <td>
                            @if (quiz.IsPublished)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Draft</span>
                            }
                        </td>
                        <td>@quiz.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                @if (!quiz.IsPublished)
                                {
                                    <a asp-action="AddQuestions" asp-route-id="@quiz.QuizID"
                                       class="btn btn-info" title="Add Questions">
                                        <i class="fas fa-question-circle"></i>
                                    </a>
                                    <a asp-action="Publish" asp-route-id="@quiz.QuizID"
                                       class="btn btn-success" title="Publish"
                                       onclick="return confirm('Publish this quiz?')">
                                        <i class="fas fa-check"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ViewResults" asp-route-id="@quiz.QuizID"
                                       class="btn btn-primary" title="View Results">
                                        <i class="fas fa-chart-bar"></i>
                                    </a>
                                    <a asp-action="Export" asp-route-id="@quiz.QuizID"
                                       class="btn btn-secondary" title="Export to Excel">
                                        <i class="fas fa-file-excel"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No quizzes found. <a asp-action="Create">Create your first quiz</a>.
        </div>
    }
</div>