@model PWALMS.Models.QuizCategory
@{
    ViewData["Title"] = "Delete Category";
    var quizCount = ViewBag.QuizCount as int? ?? 0;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-trash"></i> Delete Category</h4>
            </div>
            <div class="card-body">
                @if (quizCount > 0)
                {
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-exclamation-triangle"></i> Cannot Delete!</h5>
                        <p>This category is being used by @quizCount quiz(zes).</p>
                        <p>Please reassign or delete those quizzes first.</p>
                    </div>

                    <a asp-action="Categories" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Categories
                    </a>
                }
                else
                {
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle"></i> Warning!</h5>
                        <p>Are you sure you want to delete this category?</p>
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5>Category Details</h5>
                            <p><strong>Name:</strong> @Model.CategoryName</p>
                            <p><strong>Description:</strong> @Model.Description</p>
                        </div>
                    </div>

                    <form asp-action="DeleteCategoryConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.CategoryID" />
                        @Html.AntiForgeryToken()

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Yes, Delete Category
                            </button>
                            <a asp-action="Categories" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>